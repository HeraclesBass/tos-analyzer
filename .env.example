# Database Configuration (Hercules PostgreSQL)
DATABASE_URL="postgresql://hercules:REDACTED@localhost:5432/hercules_db?schema=tos_analyzer"

# Redis Configuration
REDIS_URL="redis://:REDACTED@localhost:6379"

# Gemini API Configuration
# ⚠️ CRITICAL: Add this to secrets vault first!
# /home/hercules/scripts/secrets-manager.sh add GEMINI_API_KEY "YOUR_GEMINI_API_KEY_HERE"
GEMINI_API_KEY="PLACEHOLDER_REPLACE_WITH_REAL_KEY"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:8099"
PORT=8099
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Analytics
ANALYTICS_ENABLED=true

# PDF Processing
MAX_FILE_SIZE_MB=10

# Cache TTL (seconds)
CACHE_TTL_ANALYSIS=604800
CACHE_TTL_SHARE=2592000
